# Environment Configuration
NODE_ENV=development
PORT=5000

# Database
# Local MongoDB (for development)
# MONGODB_URI=mongodb://localhost:27017/auto-universe

# MongoDB Atlas (cloud database - recommended)
# Replace with your actual connection string from MongoDB Atlas
MONGODB_URI=mongodb+srv://username:password@cluster.xxxxx.mongodb.net/auto-universe?retryWrites=true&w=majority

# JWT Secret (Change this in production!)
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# Email Configuration (Example with Gmail)
EMAIL_SERVICE=gmail
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-password
EMAIL_TO=autodealership@example.com
DEALERSHIP_EMAIL=info@autouniverseinc.com

# Google Calendar API Configuration
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_REDIRECT_URI=https://developers.google.com/oauthplayground
GOOGLE_REFRESH_TOKEN=your-refresh-token

# Cloudinary (for image uploads)
CLOUDINARY_CLOUD_NAME=your-cloud-name
CLOUDINARY_API_KEY=your-api-key
CLOUDINARY_API_SECRET=your-api-secret

# Admin Configuration
ADMIN_EMAIL=admin@autouniverse.com
ADMIN_PASSWORD=admin123
